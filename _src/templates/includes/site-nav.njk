          <menuitem>
            <a class="block {% if 'forms' in page.url %}bl-heavy t-black t-dark-invert bg-gray bg-200 bg-dark-invert{% endif %} p-cell t-gray t-700 hover:t-900 t-dark-invert" {% if 'forms' in page.url %} aria-current="page"{% endif %} href="{{ '/forms/' | url }}">Forms</a>
          </menuitem>
          <menuitem>
            <a class="block {% if 'buttons' in page.url %}bl-heavy t-black t-dark-invert bg-gray bg-200 bg-dark-invert{% endif %} p-cell t-gray t-700 hover:t-900 t-dark-invert" {% if 'buttons' in page.url %} aria-current="page"{% endif %} href="{{ '/buttons/' | url }}">Buttons</a>
